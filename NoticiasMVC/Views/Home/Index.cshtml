@model IEnumerable<NoticiasMVC.Models.Categorias>
@{
    ViewData["Title"] = "Home";
}

<div class="row">
   <div class="col-12">
       <h4 class="text-center">Noticias</h4>
   </div>


   <!--contenedor de noticias-->
   <div class="col-12 mt-2">
       <div class="row">
            @if (Model.Count() > 0)
            {
                @foreach (var categoria in Model)
                {
                    <div class="col-lg-4 col-sm-12 mb-3">
                        <!--Card categoria-->
                        <div class="card">
                            <img class="card-img" src="@WebConst.CategoriasPath/@categoria.ImagenCategoria" />
                            <div class="card-body">
                                <h4 class="card-title">@categoria.NombreCategoria</h4>
                                <p>@Html.Raw(categoria.DescripcionCategoria)</p>
                            </div>

                            <div class="card-footer">
                                <a asp-controller="Home" asp-action="Details" asp-route-Id="@categoria.IdCategoria" 
                                class="btn btn-primary w-100">
                                    Ver Noticias
                                </a>
                            </div>
                        </div>
                        <!--Fin Card categoria-->
                    </div>
                }
            }else
            {
                <div class="col-12">
                    <div class="alert alert-success">
                        No hay contenido disponible!!
                    </div>
                </div>    
            }
       </div>
   </div>
   <!--Fin de contenedor de noticias-->
</div> 